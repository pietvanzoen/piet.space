---
pageable: true
per_page: 5
---
<header class="header">
  <h1 class="shape--<%= random_shape_color %>">piet.space</h1>
  <p class="text-large">My journal of sounds.</p>
</header>

<% page_articles.each_with_index do |article, i| %>
  <h2><%= link_to article.title, article %> <small><%= article.date.strftime('%e %B, %Y') %></small></h2>
<% end %>

<% if paginate && num_pages > 1 %>
  <footer class="pagination">
    <p>Page <%= page_number %> of <%= num_pages %></p>

    <p>
      <%= link_to 'Previous page', prev_page if prev_page %>
      <%= '&bull;' if prev_page and next_page %>
      <%= link_to 'Next page', next_page if next_page %>
    </p>
  </footer>
<% end %>

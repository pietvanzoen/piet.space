---
pageable: true
per_page: 5
---
<header class="header">
  <h1>piet.space</h1>
  <p class="text-large">Recordings from interesting spaces.</p>
</header>

<% page_articles.each_with_index do |article, i| %>
  <h2><%= link_to article.title, article %> <small><%= article.date.strftime('%e %B, %Y') %></small></h2>
<% end %>


<% if paginate && num_pages > 1 %>
  <footer class="pagination">
    <p>
      <%= link_to 'Newer posts', prev_page if prev_page %>
      <%= '&bull;' if prev_page and next_page %>
      <%= link_to 'Older posts', next_page if next_page %>
    </p>
  </footer>
<% end %>

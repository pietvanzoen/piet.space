---
pageable: true
per_page: 10
---
<header>
  <h1>piet.space</h1>
  <p class="text-large">A collection of sounds.</p>
</header>

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <h2><%= link_to article.title, article %> <small><%= article.date.strftime('%e %b, %Y') %></small></h2>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>

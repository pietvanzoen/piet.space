<script src="https://unpkg.com/wavesurfer.js"></script>
<div id="wave"></div>

<script>
  WaveSurfer.create({
    container: document.querySelector('#wave'),
    mediaControls: true,
    backend: 'MediaElement'

  }).load('<%= src %>');
</script>

<noscript>
  <audio controls src="<%= src %>"></audio>
</noscript>

<p><strong><a href="<%= src %>" download>Download Audio</a></strong></p>
